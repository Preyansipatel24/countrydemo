@model CountryDemo.Models.City


<form method-post asp-action="Create">
 <div class="border p-3">
        <div asp-validation-summary = "ModelOnly" class ="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add city</h2>
        </div>
   
    <div class="row">
         <div class="col-8">
            
             <div class="form-group row">
                <div class="col-4">
                    @Html.Label("Country Name")
                </div>
                <div class="col-8">
                     @Html.DropDownListFor(x => x.CoutryId, new SelectList(ViewBag.countryList, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                   
                </div>
            </div>
            
             <div class="form-group row">
                <div class="col-4">
                    @Html.Label("State Name")
                </div>
                <div class="col-8">
                     @Html.DropDownListFor(x => x.StateId, new SelectList(ViewBag.statelist, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                   
                </div>
            </div>
              <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CityName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CityName" class="form-control"/>
                   <span asp-validation-for="CityName" class="text-danger"></span>
                </div>
            </div>
            
        
        <div class="form-group row">
            <div class="col-8 offset-4 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-100" value="Create"/> 
                </div>
          
                <div class="col">
                    <a asp-action="Index" class="btn btn-primary w-100">
                  <i class="fa-solid fa-arrow-right-to-bracket"></i> &nbsp;  Back 
                     </a>
                </div>
            </div>
        </div>
      </div>
        <div class="col-4">

        </div>
   
 </div>
 </div>

</form>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
 

