@model CountryDemo.Models.Country

<form method-post asp-action="Create">
 <div class="border p-3">
        <div asp-validation-summary = "ModelOnly" class ="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Country</h2>
        </div>
   
    <div class="row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CountryName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CountryName" class="form-control"/>
                   <span asp-validation-for="CountryName" class="text-danger"></span>
                </div>
            </div>
            
        
        <div class="form-group row">
            <div class="col-8 offset-4 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-100" value="Create"/> 
                </div>
          
                <div class="col">
                    <a asp-action="Index" class="btn btn-primary w-100">
                  <i class="fa-solid fa-arrow-right-to-bracket"></i> &nbsp;  Back 
                     </a>
                </div>
            </div>
        </div>
      </div>
        <div class="col-4">

        </div>
   
 </div>
 </div>

</form>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}